{
  "name": "helloforma",
  "version": "1.0.0",
  "scripts": {
    "build:css": "postcss assets/css/main.css -o dist/css/main.min.css",
    "build:js": "terser assets/js/main.js -o dist/js/main.min.js",
    "build": "npm run build:css && npm run build:js",
    "watch": "nodemon --watch assets -e css,js --exec npm run build",
    "serve": "live-server --port=8080"
  },
  "devDependencies": {
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "terser": "^5.24.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1"
  }
} 